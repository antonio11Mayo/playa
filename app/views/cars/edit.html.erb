<%= form_for @car, url: car_path(@car), method: :put do |f| %>
  <%= f.text_field :license_plate, placeholder: 'license_plate' %>
  <%-if f.object.errors[:license_plate].present?%>
    <%= f.object.errors[:license_plate].join(',') %>
  <% end%>

  <%= f.number_field :model, placeholder: 'model' %>
  <%-if f.object.errors[:model].present?%>
    <%= f.object.errors[:model].join(',') %>
  <% end%>

  <%= f.number_field :tint, placeholder: 'model' %>
  <%-if f.object.errors[:tint].present?%>
    <%= f.object.errors[:tint].join(',') %>
  <% end%>
  <%= f.submit 'Actualizar carro' %>
<% end %>

<div>
  <%=link_to 'Ir a listado de carros', cars_path %>
</div>